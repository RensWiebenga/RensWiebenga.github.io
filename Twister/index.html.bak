<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
		
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

		<style>
			.color {
				padding: 50px;
				background-color:#ccc;
				border-radius:25px;
				max-width:600px;
				margin:20% auto;
			}
			.title, .limb {
				color:#fff;
			}
			.button {
				background: blue;
				padding: 20px 50px;
				max-width:600px;
				margin:10% auto;
				color:#100cb5;
				border-radius:25px;
				color:white;
				cursor:pointer;
				text-align:center;
			}
			.button:hover {
				background-color:#221dcb;
			}
		</style>

		

	</head>
	<body>
		<div class="container text-center">
			<div class="row">
				<div class="col-md-12">
					<div class="color">
						<h1 class="title">Title</h1>
						<h1 class="limb">Limb</h1>
					</div>
				</div>
			</div>
			
			<div class="row">
				<div class="col-md-12">
					<h1 class="timer">Timer</h1>
					<h1 class="turn">Rens</h1>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<h1 class="button">START
						
					</h1>
					
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					
				</div>
			</div>
		</div>
	</body>

	<script>
		randomColor();
		randomLimb();

		$('.button').click(function(){
			 
			countDown();
		});

		function countDown() {
			var countdown = 15;
			$('.timer').html(countdown+ " seconds");
			var x = setInterval(function() {
				countdown--;
				$('.timer').html(countdown + " seconds");
				if (countdown < 0) {
					clearInterval(x);
					randomColor();
					randomLimb();
					$('.timer').html("Done!!!");
					countDown();
					var myturn = $('.turn').text();
					if(myturn == "Rens") {
						$('.turn').text("Flavia");
					} else {
						$('.turn').text("Rens");
					}

				  }

			}, 1000);
		}
		
		function randomColor() {
			var randomNumber = Math.floor(Math.random()*4 +1);
			switch(randomNumber) {
				case 1:
					$('.title').html("Pink: Mr. Big");
					$('.color').css({'background-color':'#fe8cd5'});
					
					break;
				case 2:
					$('.title').html("Black: Donkey Dick");
					$('.color').css({'background-color':'black'});
					break;
				case 3:
					$('.title').html("Fuchsia: Bell End");
					$('.color').css({'background-color':'#d6226a'});
					break;
				case 4:
					$('.title').html("Purple: Jumbo");
					$('.color').css({'background-color':'#6d04b7'});
					break;


			};
		};
		function randomLimb() {
			var randomNumber = Math.floor(Math.random()*4 +1);
			switch(randomNumber) {
				case 1:
					$('.limb').html("Left hand");
					
					
					break;
				case 2:
					$('.limb').html("Right hand");
					
					break;
				case 3:
					$('.limb').html("Left foot");
					
					break;
				case 4:
					$('.limb').html("Right foot");
					
					break;


			};
		}

	</script>
</html>
